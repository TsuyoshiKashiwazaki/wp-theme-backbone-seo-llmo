{
    "name": "葛飾北斎",
    "id": "tk-design-hokusai",
    "description": "浮世絵の巨匠！日本的な余白と縦書き感覚の和風レイアウト",
    "layout": {
        "type": "minimalist",
        "content_width": "85%",
        "sidebar_enabled": true,
        "container_padding": "0 1.5rem"
    },
    "header": {
        "layout": "contained",
        "height": "auto",
        "padding": "2.5rem 0 1.5rem",
        "position": "static",
        "alignment": "center",
        "margin": "0 auto",
        "nav_position": "below",
        "structure": "two_tier"
    },
    "navigation": {
        "position": "below_header",
        "padding": "1rem 0 1.5rem",
        "alignment": "center",
        "background": "transparent",
        "border_bottom": "2px solid var(--border-color)"
    },
    "content": {
        "main_padding": "2rem 1.5rem",
        "article_spacing": "3rem",
        "section_margins": "2.5rem 0",
        "margin": "0 auto"
    },
    "footer": {
        "layout": "contained",
        "padding": "2.5rem 0",
        "margin_top": "3rem",
        "margin_left": "auto",
        "margin_right": "auto"
    },
    "containers": {
        "border_radius": "0",
        "spacing": "2rem",
        "alignment": "center"
    },
    "columns": {
        "border": {
            "style": "solid",
            "width": "1px",
            "color": "var(--border-color)",
            "position": "left,right",
            "radius": "0"
        },
        "shadow": {
            "type": "none",
            "intensity": "none",
            "color": "transparent",
            "blur": "0",
            "spread": "0",
            "x_offset": "0",
            "y_offset": "0"
        },
        "css": {
            "selectors": [
                ".design-{id}.layout-two-columns .content-area",
                ".design-{id}.layout-two-columns .sidebar",
                ".design-{id}.layout-three-columns .content-area",
                ".design-{id}.layout-three-columns .sidebar"
            ],
            "properties": {
                "margin": "0",
                "padding": "1.5rem",
                "background": "transparent"
            }
        }
    }
}
