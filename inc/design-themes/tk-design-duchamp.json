{
    "name": "マルセル・デュシャン",
    "id": "tk-design-duchamp",
    "description": "既製品の美学！日用品を芸術に変える概念的で挑発的なレイアウト",
    "layout": {
        "type": "readymade",
        "content_width": "100%",
        "sidebar_enabled": true,
        "container_padding": "0"
    },
    "header": {
        "layout": "wide",
        "height": "auto",
        "padding": "1.5rem 2rem 1.5rem 1rem",
        "position": "static",
        "alignment": "right",
        "margin": "0 0 0 30px",
        "nav_position": "inline",
        "structure": "single_tier"
    },
    "navigation": {
        "position": "header_left",
        "padding": "0 0 0 2rem",
        "alignment": "left",
        "background": "transparent",
        "border": "none"
    },
    "content": {
        "main_padding": "2rem 2rem 2rem 3rem",
        "article_spacing": "2rem",
        "section_margins": "2rem 0",
        "margin": "0 30px 0 0"
    },
    "footer": {
        "layout": "wide",
        "padding": "1.5rem 1rem 1.5rem 2rem",
        "margin_top": "2rem",
        "margin_left": "30px",
        "margin_right": "0"
    },
    "containers": {
        "border_radius": "0",
        "spacing": "0",
        "alignment": "left"
    },
    "columns": {
        "border": {
            "style": "dashed",
            "width": "1px",
            "color": "var(--text-secondary)",
            "position": "top,bottom",
            "radius": "0"
        },
        "shadow": {
            "type": "none",
            "intensity": "none",
            "color": "transparent",
            "blur": "0",
            "spread": "0",
            "x_offset": "0",
            "y_offset": "0"
        },
        "css": {
            "selectors": [
                ".design-{id} .content-area"
            ],
            "properties": {
                "margin": "0",
                "padding": "2rem",
                "background": "var(--background-color)",
                "border-top": "1px dashed var(--text-secondary)",
                "border-bottom": "1px dashed var(--text-secondary)",
                "transform": "rotate(180deg)",
                "writing-mode": "horizontal-tb"
            }
        }
    }
}