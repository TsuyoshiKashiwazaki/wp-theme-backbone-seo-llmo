{
    "name": "フリーダ・カーロ",
    "id": "tk-design-kahlo",
    "description": "情熱的な自画像！メキシコの色彩と力強いレイアウト",
    "layout": {
        "type": "symbolic",
        "content_width": "100%",
        "sidebar_enabled": true,
        "container_padding": "0 1rem"
    },
    "header": {
        "layout": "contained",
        "height": "auto",
        "padding": "2rem 0 1rem",
        "position": "static",
        "alignment": "center",
        "margin": "0 auto",
        "nav_position": "below",
        "structure": "two_tier"
    },
    "navigation": {
        "position": "below_header",
        "padding": "1rem 0 2rem",
        "alignment": "center",
        "background": "transparent",
        "border_top": "1px solid var(--border-color, #ddd)"
    },
    "content": {
        "main_padding": "2rem",
        "article_spacing": "3rem",
        "section_margins": "2rem 0",
        "margin": "0 auto"
    },
    "footer": {
        "layout": "contained",
        "padding": "2rem 0",
        "margin_top": "3rem",
        "margin_left": "auto",
        "margin_right": "auto"
    },
    "containers": {
        "border_radius": "0",
        "spacing": "2.5rem",
        "alignment": "center"
    },
    "columns": {
        "border": {
            "style": "solid",
            "width": "1px",
            "color": "var(--accent-color, #000)",
            "position": "top,bottom",
            "radius": "0"
        },
        "shadow": {
            "type": "subtle",
            "intensity": "soft",
            "color": "rgba(0,0,0,0.08)",
            "blur": "8px",
            "spread": "0",
            "x_offset": "0",
            "y_offset": "2px"
        },
        "css": {
            "selectors": [
                ".design-{id}.layout-two-columns .content-area",
                ".design-{id}.layout-two-columns .sidebar",
                ".design-{id}.layout-three-columns .content-area",
                ".design-{id}.layout-three-columns .sidebar"
            ],
            "properties": {
                "margin": "0",
                "padding": "2rem",
                "background": "var(--background-color, #fff)"
            }
        }
    }
}
