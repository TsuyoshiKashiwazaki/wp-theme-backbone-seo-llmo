{
    "name": "草間彌生",
    "id": "tk-design-kusama",
    "description": "無限の水玉！ドットパターンが増殖する幻覚的インフィニティレイアウト",
    "layout": {
        "type": "infinity_dots",
        "content_width": "94%",
        "sidebar_enabled": true,
        "container_padding": "0 1.5rem"
    },
    "header": {
        "layout": "contained",
        "height": "auto",
        "padding": "2rem",
        "position": "static",
        "alignment": "center",
        "margin": "0 auto",
        "nav_position": "inline",
        "structure": "single_tier"
    },
    "navigation": {
        "position": "header_center",
        "padding": "1rem",
        "alignment": "center",
        "background": "transparent",
        "border_bottom": "2px dotted var(--accent-color)"
    },
    "content": {
        "main_padding": "2rem",
        "article_spacing": "2rem",
        "section_margins": "2rem 0",
        "margin": "0 auto"
    },
    "footer": {
        "layout": "contained",
        "padding": "2rem",
        "margin_top": "2rem",
        "margin_left": "auto",
        "margin_right": "auto",
        "background": "repeating-radial-gradient(circle at center, var(--accent-color) 0, var(--accent-color) 2px, transparent 2px, transparent 15px)"
    },
    "containers": {
        "border_radius": "10px",
        "spacing": "2rem",
        "alignment": "center"
    },
    "columns": {
        "border": {
            "style": "dotted",
            "width": "1px",
            "color": "var(--accent-color)",
            "position": "all",
            "radius": "10px"
        },
        "shadow": {
            "type": "dots",
            "intensity": "soft",
            "color": "rgba(var(--accent-rgb), 0.2)",
            "blur": "10px",
            "spread": "0",
            "x_offset": "0",
            "y_offset": "5px"
        },
        "css": {
            "selectors": [
                ".design-{id} .content-area",
                ".design-{id} .sidebar"
            ],
            "properties": {
                "margin": "0",
                "padding": "2.5rem",
                "background": "var(--background-color)",
                "border": "1px dotted var(--accent-color)",
                "border-radius": "10px",
                "position": "relative",
                "background-image": "radial-gradient(circle, rgba(var(--accent-rgb), 0.08) 8%, transparent 8%)",
                "background-size": "20px 20px",
                "background-position": "0 0"
            }
        }
    }
}