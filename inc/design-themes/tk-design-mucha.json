{
    "name": "ミュシャ",
    "id": "tk-design-mucha",
    "description": "アールヌーボーの華！優美な曲線と装飾的な枠が特徴の華麗なレイアウト",
    "layout": {
        "type": "decorative",
        "content_width": "86%",
        "sidebar_enabled": true,
        "container_padding": "0 2rem"
    },
    "header": {
        "layout": "contained",
        "height": "auto",
        "padding": "3rem 0 2rem",
        "position": "static",
        "alignment": "center",
        "margin": "0 auto",
        "nav_position": "below",
        "structure": "two_tier"
    },
    "navigation": {
        "position": "below_header",
        "padding": "1.5rem 0 2rem",
        "alignment": "center",
        "background": "transparent",
        "border_top": "2px solid var(--border-color)",
        "border_bottom": "2px solid var(--border-color)"
    },
    "content": {
        "main_padding": "2.5rem 2rem",
        "article_spacing": "3.5rem",
        "section_margins": "3rem 0",
        "margin": "0 auto"
    },
    "footer": {
        "layout": "contained",
        "padding": "3rem 0",
        "margin_top": "3.5rem",
        "margin_left": "auto",
        "margin_right": "auto"
    },
    "containers": {
        "border_radius": "12px",
        "spacing": "2.5rem",
        "alignment": "center"
    },
    "columns": {
        "border": {
            "style": "double",
            "width": "1px",
            "color": "rgba(var(--border-rgb), 0.5)",
            "position": "all",
            "radius": "12px"
        },
        "shadow": {
            "type": "outer",
            "intensity": "soft",
            "color": "rgba(0,0,0,0.1)",
            "blur": "14px",
            "spread": "1px",
            "x_offset": "0",
            "y_offset": "3px"
        },
        "css": {
            "selectors": [
                ".design-{id}.layout-two-columns .content-area",
                ".design-{id}.layout-two-columns .sidebar",
                ".design-{id}.layout-three-columns .content-area",
                ".design-{id}.layout-three-columns .sidebar"
            ],
            "properties": {
                "margin": "0",
                "padding": "2rem",
                "background": "linear-gradient(180deg, var(--background-color), var(--background-secondary))",
                "border-radius": "12px"
            }
        }
    }
}
