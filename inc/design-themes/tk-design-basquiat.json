{
    "name": "バスキア",
    "id": "tk-design-basquiat",
    "description": "ストリートアートの王冠！グラフィティ風の力強いレイアウト",
    "layout": {
        "type": "graffiti",
        "content_width": "100%",
        "sidebar_enabled": true,
        "container_padding": "0 1rem"
    },
    "header": {
        "layout": "contained",
        "height": "auto",
        "padding": "2rem 0",
        "position": "static",
        "alignment": "left",
        "margin": "0 auto",
        "nav_position": "inline",
        "structure": "single_tier"
    },
    "navigation": {
        "position": "header_right",
        "padding": "0",
        "alignment": "right",
        "background": "transparent",
        "border": "none"
    },
    "content": {
        "main_padding": "2rem",
        "article_spacing": "3rem",
        "section_margins": "2rem 0",
        "margin": "0 auto"
    },
    "footer": {
        "layout": "contained",
        "padding": "2rem 0",
        "margin_top": "3rem",
        "margin_left": "auto",
        "margin_right": "auto"
    },
    "containers": {
        "border_radius": "0",
        "spacing": "2rem",
        "alignment": "left"
    },
    "columns": {
        "border": {
            "style": "solid",
            "width": "1px",
            "color": "var(--accent-color, #000)",
            "position": "left",
            "radius": "0"
        },
        "shadow": {
            "type": "offset",
            "intensity": "light",
            "color": "rgba(0,0,0,0.1)",
            "blur": "0",
            "spread": "0",
            "x_offset": "2px",
            "y_offset": "2px"
        },
        "css": {
            "selectors": [
                ".design-{id}.layout-two-columns .content-area",
                ".design-{id}.layout-two-columns .sidebar",
                ".design-{id}.layout-three-columns .content-area",
                ".design-{id}.layout-three-columns .sidebar"
            ],
            "properties": {
                "margin": "0",
                "padding": "2rem",
                "background": "var(--background-color, #fff)"
            }
        }
    }
}
