{
    "name": "T.Kベルベット",
    "id": "tk-deco-velvet",
    "description": "ベルベットの柔らかさと高級感を表現する滑らかなデザイン",
    "headings": {
        "h1": {
            "border": "none",
            "background": "linear-gradient(180deg, rgba(var(--accent-color), 0.15), rgba(var(--accent-color), 0.08))",
            "box_shadow": "0 4px 20px rgba(0,0,0,0.15), inset 0 2px 4px rgba(255,255,255,0.1)",
            "text_shadow": "0 1px 2px rgba(0,0,0,0.2)"
        },
        "h2": {
            "border_left": "6px solid rgba(var(--accent-color), 0.6)",
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.1), rgba(var(--accent-color), 0.05))",
            "box_shadow": "2px 2px 10px rgba(0,0,0,0.1)",
            "text_shadow": "0 1px 1px rgba(0,0,0,0.1)"
        },
        "h3": {
            "border_bottom": "3px solid rgba(var(--accent-color), 0.4)",
            "background": "linear-gradient(180deg, rgba(var(--accent-color), 0.06), rgba(var(--accent-color), 0.02))",
            "box_shadow": "0 2px 8px rgba(0,0,0,0.08)"
        },
        "h4": {
            "border_left": "4px solid rgba(var(--accent-color), 0.5)",
            "background": "rgba(var(--accent-color), 0.04)",
            "box_shadow": "1px 1px 6px rgba(0,0,0,0.06)"
        },
        "h5": {
            "border_bottom": "2px solid rgba(var(--accent-color), 0.3)",
            "background": "rgba(var(--accent-color), 0.03)"
        },
        "h6": {
            "border_bottom": "1px solid rgba(var(--accent-color), 0.3)",
            "background": "rgba(var(--accent-color), 0.02)"
        }
    },
    "badge_padding": "4px 10px",
    "badge_padding_mobile": "3px 8px",
    "lists": {
        "ul": {
            "list_style_type": "none",
            "background": "linear-gradient(135deg, rgba(var(--accent-color), 0.04), transparent)",
            "item_position": "relative",
            "item_padding_left": "2em",
            "item_before": {
                "content": "●",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%)",
                "color": "var(--accent-color)",
                "font_size": "0.9em",
                "text_shadow": "0 1px 2px rgba(0,0,0,0.3)"
            }
        },
        "ol": {
            "list_style_type": "none",
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.03), transparent)",
            "counter_reset": "velvet-counter",
            "item_counter_increment": "velvet-counter",
            "item_position": "relative",
            "item_padding_left": "2.5em",
            "item_before": {
                "content": "counter(velvet-counter)",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "1.4em",
                "height": "1.4em",
                "background": "linear-gradient(135deg, var(--accent-color), rgba(var(--accent-color), 0.7))",
                "color": "#ffffff",
                "border_radius": "50%",
                "box_shadow": "0 2px 6px rgba(0,0,0,0.2), inset 0 1px 2px rgba(255,255,255,0.3)",
                "display": "flex",
                "align_items": "center",
                "justify_content": "center",
                "font_size": "0.75em",
                "font_weight": "bold"
            }
        }
    }
}
