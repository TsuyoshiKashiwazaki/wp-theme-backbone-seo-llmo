{
    "name": "T.Kシリコン",
    "id": "tk-deco-silicon",
    "description": "シリコンの半導体特性と技術革新を表現する未来的なデザイン",
    "headings": {
        "h1": {
            "border": "2px solid var(--accent-color)",
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.08), rgba(var(--accent-color), 0.02), rgba(var(--accent-color), 0.08))",
            "animation": "silicon-glow 3s ease-in-out infinite",
            "box_shadow": "0 0 20px rgba(var(--accent-color), 0.4), inset 0 0 20px rgba(var(--accent-color), 0.1)",
            "text_shadow": "0 0 10px rgba(var(--accent-color), 0.6)"
        },
        "h2": {
            "border_left": "3px solid var(--accent-color)",
            "background": "linear-gradient(180deg, rgba(var(--accent-color), 0.06), rgba(var(--accent-color), 0.01), rgba(var(--accent-color), 0.06))",
            "animation": "silicon-pulse 2s ease-in-out infinite",
            "box_shadow": "0 0 15px rgba(var(--accent-color), 0.3), inset 0 0 15px rgba(var(--accent-color), 0.05)",
            "text_shadow": "0 0 6px rgba(var(--accent-color), 0.4)"
        },
        "h3": {
            "border_bottom": "2px solid var(--accent-color)",
            "background": "radial-gradient(ellipse at center, rgba(var(--accent-color), 0.04), transparent)",
            "animation": "silicon-fade 2.5s ease-in-out infinite",
            "box_shadow": "0 0 10px rgba(var(--accent-color), 0.2)",
            "text_shadow": "0 0 4px rgba(var(--accent-color), 0.3)"
        },
        "h4": {
            "border_left": "2px solid var(--accent-color)",
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.03), transparent)",
            "animation": "silicon-fade 2.5s ease-in-out infinite",
            "box_shadow": "0 0 8px rgba(var(--accent-color), 0.15)",
            "text_shadow": "0 0 3px rgba(var(--accent-color), 0.2)"
        },
        "h5": {
            "border_bottom": "1px dotted var(--accent-color)",
            "background": "rgba(var(--accent-color), 0.02)",
            "animation": "silicon-fade 3s ease-in-out infinite"
        },
        "h6": {
            "border_bottom": "1px solid var(--accent-color)",
            "background": "rgba(var(--accent-color), 0.02)",
            "animation": "silicon-fade 3s ease-in-out infinite"
        }
    },
    "lists": {
        "ul": {
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.03), rgba(var(--accent-color), 0.01), rgba(var(--accent-color), 0.03))",
            "animation": "silicon-pulse 2s ease-in-out infinite",
            "item_position": "relative",
            "item_padding_left": "2.8em",
            "item_before": {
                "content": "⬡",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "auto",
                "height": "auto",
                "color": "var(--accent-color)",
                "font_size": "0.9em",
                "filter": "drop-shadow(0 0 5px rgba(var(--accent-color), 0.7))",
                "text_shadow": "0 0 10px rgba(var(--accent-color), 1), 0 0 20px rgba(var(--accent-color), 0.5)",
                "animation": "silicon-glow 2.5s ease-in-out infinite"
            },
            "list_style_type": "none"
        },
        "ol": {
            "background": "linear-gradient(180deg, rgba(var(--accent-color), 0.04), rgba(var(--accent-color), 0.01), rgba(var(--accent-color), 0.04))",
            "animation": "silicon-fade 3s ease-in-out infinite",
            "counter_reset": "silicon-counter",
            "item_counter_increment": "silicon-counter",
            "item_position": "relative",
            "item_padding_left": "3.5em",
            "item_before": {
                "content": "counter(silicon-counter)",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "2.2em",
                "height": "1.8em",
                "background": "var(--background-secondary)",
                "color": "var(--text-secondary)",
                "border_radius": "0 0.9em 0.9em 0",
                "box_shadow": "0 0 0 3px rgba(var(--accent-color), 0.6), 0 0 12px rgba(var(--accent-color), 0.7), inset 0 0 0 2px rgba(255,255,255,0.3)",
                "display": "flex",
                "align_items": "center",
                "justify_content": "center",
                "font_size": "0.85em",
                "font_weight": "bold",
                "text_shadow": "0 0 6px rgba(var(--accent-color), 0.8)",
                "animation": "silicon-pulse 2s ease-in-out infinite"
            },
            "list_style_type": "none"
        }
    }
}