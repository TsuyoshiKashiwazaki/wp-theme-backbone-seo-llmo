{
    "name": "T.Kガラス",
    "id": "tk-deco-glass",
    "description": "ガラスの透明感と繊細さを表現するクリアなデザイン",
    "headings": {
        "h1": {
            "border": "1px solid rgba(var(--accent-color), 0.2)",
            "background": "rgba(255,255,255,0.4)",
            "backdrop_filter": "blur(4px)",
            "box_shadow": "0 4px 16px rgba(var(--accent-color), 0.15), inset 0 1px 0 rgba(255,255,255,0.6)"
        },
        "h2": {
            "border_left": "3px solid rgba(var(--accent-color), 0.3)",
            "background": "rgba(255,255,255,0.3)",
            "backdrop_filter": "blur(3px)",
            "box_shadow": "2px 0 12px rgba(var(--accent-color), 0.1), inset 2px 0 0 rgba(255,255,255,0.5)"
        },
        "h3": {
            "border_bottom": "1px solid rgba(var(--accent-color), 0.25)",
            "background": "rgba(255,255,255,0.25)",
            "backdrop_filter": "blur(2px)",
            "box_shadow": "0 2px 8px rgba(var(--accent-color), 0.08)"
        },
        "h4": {
            "border_left": "2px solid rgba(var(--accent-color), 0.2)",
            "background": "rgba(255,255,255,0.2)",
            "backdrop_filter": "blur(1px)"
        },
        "h5": {
            "border_bottom": "1px solid rgba(var(--accent-color), 0.15)",
            "background": "rgba(255,255,255,0.15)",
            "backdrop_filter": "blur(0.5px)"
        },
        "h6": {
            "border_bottom": "1px dotted rgba(var(--accent-color), 0.15)",
            "background": "rgba(255,255,255,0.1)"
        }
    },
    "badge_padding": "3px 9px",
    "badge_padding_mobile": "2px 7px",
    "lists": {
        "ul": {
            "list_style_type": "none",
            "background": "rgba(255,255,255,0.15)",
            "backdrop_filter": "blur(1px)",
            "border": "1px solid rgba(var(--accent-color), 0.1)",
            "item_position": "relative",
            "item_padding_left": "2em",
            "item_before": {
                "content": "○",
                "position": "absolute",
                "left": "0.5em",
                "top": "15px",
                "transform": "translateY(-50%)",
                "color": "var(--accent-color)",
                "font_size": "0.8em",
                "text_shadow": "0 0 4px rgba(var(--accent-color), 0.5)"
            }
        },
        "ol": {
            "list_style_type": "none",
            "background": "rgba(255,255,255,0.1)",
            "backdrop_filter": "blur(0.5px)",
            "border": "1px solid rgba(var(--accent-color), 0.08)",
            "counter_reset": "glass-counter",
            "item_counter_increment": "glass-counter",
            "item_position": "relative",
            "item_padding_left": "2.5em",
            "item_before": {
                "content": "counter(glass-counter)",
                "position": "absolute",
                "left": "0.5em",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "1.3em",
                "height": "1.3em",
                "background": "rgba(var(--accent-color), 0.1)",
                "border": "1px solid rgba(var(--accent-color), 0.3)",
                "color": "var(--accent-color)",
                "border_radius": "50%",
                "display": "flex",
                "align_items": "center",
                "justify_content": "center",
                "font_size": "0.75em",
                "font_weight": "bold",
                "backdrop_filter": "blur(2px)"
            }
        }
    }
}
