{
    "name": "T.Kコンクリート",
    "id": "tk-deco-concrete",
    "description": "コンクリートの無骨さと工業的な美しさを表現するインダストリアルデザイン",
    "headings": {
        "h1": {
            "border": "4px solid var(--border-color)",
            "border_left": "8px solid var(--accent-color)",
            "background": "linear-gradient(135deg, rgba(var(--accent-color), 0.08), rgba(var(--accent-color), 0.03))",
            "box_shadow": "4px 4px 0 rgba(0,0,0,0.1), 8px 8px 16px rgba(0,0,0,0.15)"
        },
        "h2": {
            "border": "3px solid var(--border-color)",
            "border_left": "6px solid var(--accent-color)",
            "background": "rgba(var(--accent-color), 0.04)",
            "box_shadow": "3px 3px 0 rgba(0,0,0,0.08), 6px 6px 12px rgba(0,0,0,0.12)"
        },
        "h3": {
            "border": "2px solid var(--border-color)",
            "border_left": "5px solid var(--accent-color)",
            "background": "rgba(var(--accent-color), 0.03)",
            "box_shadow": "2px 2px 0 rgba(0,0,0,0.06), 4px 4px 8px rgba(0,0,0,0.1)"
        },
        "h4": {
            "border_left": "4px solid var(--accent-color)",
            "border_bottom": "2px solid var(--border-color)",
            "background": "rgba(var(--accent-color), 0.02)",
            "box_shadow": "2px 2px 6px rgba(0,0,0,0.08)"
        },
        "h5": {
            "border_left": "3px solid rgba(var(--accent-color), 0.7)",
            "border_bottom": "1px solid var(--border-color)"
        },
        "h6": {
            "border_left": "2px solid rgba(var(--accent-color), 0.5)",
            "border_bottom": "1px solid var(--border-color)"
        }
    },
    "badge_padding": "4px 10px",
    "badge_padding_mobile": "3px 8px",
    "lists": {
        "ul": {
            "list_style_type": "none",
            "background": "rgba(var(--accent-color), 0.02)",
            "border_left": "3px solid var(--border-color)",
            "box_shadow": "2px 2px 4px rgba(0,0,0,0.08)",
            "item_position": "relative",
            "item_padding_left": "2.5em",
            "item_before": {
                "content": "▪",
                "position": "absolute",
                "left": "0.8em",
                "top": "15px",
                "transform": "translateY(-50%)",
                "color": "var(--accent-color)",
                "font_size": "1em"
            }
        },
        "ol": {
            "list_style_type": "none",
            "background": "rgba(var(--accent-color), 0.015)",
            "border_left": "3px solid var(--border-color)",
            "box_shadow": "2px 2px 4px rgba(0,0,0,0.06)",
            "counter_reset": "concrete-counter",
            "item_counter_increment": "concrete-counter",
            "item_position": "relative",
            "item_padding_left": "3.2em",
            "item_before": {
                "content": "counter(concrete-counter)",
                "position": "absolute",
                "left": "0.8em",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "1.6em",
                "height": "1.6em",
                "background": "var(--background-secondary)",
                "border": "2px solid var(--accent-color)",
                "color": "var(--text-primary)",
                "box_shadow": "2px 2px 0 rgba(0,0,0,0.1)",
                "display": "flex",
                "align_items": "center",
                "justify_content": "center",
                "font_size": "0.8em",
                "font_weight": "bold"
            }
        }
    }
}
