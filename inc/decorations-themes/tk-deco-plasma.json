{
    "name": "T.Kプラズマ",
    "id": "tk-deco-plasma",
    "description": "プラズマの高エネルギー状態と電離を表現する躍動的なデザイン",
    "headings": {
        "h1": {
            "border": "2px solid var(--accent-color)",
            "background": "radial-gradient(ellipse at center, rgba(var(--accent-color), 0.15), rgba(var(--accent-color), 0.05), transparent)",
            "text_shadow": "0 0 8px rgba(var(--accent-color), 0.8), 0 0 16px rgba(var(--accent-color), 0.4)",
            "box_shadow": "0 0 20px rgba(var(--accent-color), 0.6), inset 0 0 20px rgba(var(--accent-color), 0.2)"
        },
        "h2": {
            "border_left": "4px solid var(--accent-color)",
            "background": "radial-gradient(circle at left, rgba(var(--accent-color), 0.1), rgba(var(--accent-color), 0.03), transparent)",
            "text_shadow": "0 0 6px rgba(var(--accent-color), 0.6), 0 0 12px rgba(var(--accent-color), 0.3)",
            "box_shadow": "0 0 15px rgba(var(--accent-color), 0.4), inset 0 0 15px rgba(var(--accent-color), 0.1)"
        },
        "h3": {
            "border_bottom": "2px solid var(--accent-color)",
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.08), rgba(var(--accent-color), 0.02))",
            "text_shadow": "0 0 4px rgba(var(--accent-color), 0.4), 0 0 8px rgba(var(--accent-color), 0.2)",
            "box_shadow": "0 0 10px rgba(var(--accent-color), 0.3)"
        },
        "h4": {
            "border_left": "3px solid var(--accent-color)",
            "background": "radial-gradient(circle at left, rgba(var(--accent-color), 0.05), transparent)",
            "text_shadow": "0 0 3px rgba(var(--accent-color), 0.3), 0 0 6px rgba(var(--accent-color), 0.15)"
        },
        "h5": {
            "border_bottom": "1px dotted var(--accent-color)",
            "background": "rgba(var(--accent-color), 0.02)",
            "text_shadow": "0 0 2px rgba(var(--accent-color), 0.2)"
        },
        "h6": {
            "border_bottom": "1px solid var(--accent-color)",
            "background": "rgba(var(--accent-color), 0.02)",
            "text_shadow": "0 0 2px rgba(var(--accent-color), 0.2)"
        }
    },
    "lists": {
        "ul": {
            "background": "radial-gradient(ellipse at center, rgba(var(--accent-color), 0.03), transparent)",
            "item_position": "relative",
            "item_padding_left": "2.5em",
            "item_before": {
                "content": "⚡",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "auto",
                "height": "auto",
                "color": "var(--accent-color)",
                "font_size": "0.8em",
                "filter": "drop-shadow(0 0 4px rgba(var(--accent-color), 0.9))",
                "text_shadow": "0 0 8px rgba(var(--accent-color), 1), 0 0 16px rgba(var(--accent-color), 0.6)"
            },
            "list_style_type": "none"
        },
        "ol": {
            "background": "radial-gradient(circle at left, rgba(var(--accent-color), 0.04), transparent)",
            "counter_reset": "plasma-counter",
            "item_counter_increment": "plasma-counter",
            "item_position": "relative",
            "item_padding_left": "3em",
            "item_before": {
                "content": "counter(plasma-counter)",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "1.8em",
                "height": "1.8em",
                "background": "var(--background-secondary)",
                "color": "var(--text-secondary)",
                "border_radius": "50%",
                "box_shadow": "0 0 0 3px rgba(var(--accent-color), 0.7), 0 0 12px rgba(var(--accent-color), 0.9), inset 0 0 0 2px rgba(255,255,255,0.4)",
                "display": "flex",
                "align_items": "center",
                "justify_content": "center",
                "font_size": "0.8em",
                "font_weight": "bold",
                "text_shadow": "0 0 4px rgba(var(--accent-color), 0.8)"
            },
            "list_style_type": "none"
        }
    }
}