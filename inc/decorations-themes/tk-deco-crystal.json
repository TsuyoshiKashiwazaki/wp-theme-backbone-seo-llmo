{
    "name": "T.Kクリスタル",
    "id": "tk-deco-crystal",
    "description": "クリスタルの透明性と幾何学的構造を表現する清潔なデザイン",
    "headings": {
        "h1": {
            "border": "1px solid rgba(var(--accent-color), 0.3)",
            "background": "linear-gradient(135deg, rgba(var(--accent-color), 0.08), rgba(var(--accent-color), 0.02), rgba(var(--accent-color), 0.08))",
            "backdrop_filter": "blur(2px)",
            "box_shadow": "0 0 15px rgba(var(--accent-color), 0.2), inset 0 0 15px rgba(var(--accent-color), 0.05)"
        },
        "h2": {
            "border_left": "2px solid rgba(var(--accent-color), 0.4)",
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.06), rgba(var(--accent-color), 0.01), transparent)",
            "backdrop_filter": "blur(1px)",
            "box_shadow": "2px 0 10px rgba(var(--accent-color), 0.15), inset 2px 0 10px rgba(var(--accent-color), 0.03)"
        },
        "h3": {
            "border_bottom": "1px solid rgba(var(--accent-color), 0.3)",
            "background": "radial-gradient(ellipse at center, rgba(var(--accent-color), 0.04), transparent)",
            "backdrop_filter": "blur(1px)",
            "box_shadow": "0 2px 8px rgba(var(--accent-color), 0.1)"
        },
        "h4": {
            "border_left": "1px solid rgba(var(--accent-color), 0.3)",
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.03), transparent)",
            "backdrop_filter": "blur(0.5px)",
            "box_shadow": "1px 0 5px rgba(var(--accent-color), 0.1)"
        },
        "h5": {
            "border_bottom": "1px dotted rgba(var(--accent-color), 0.4)",
            "background": "rgba(var(--accent-color), 0.01)",
            "backdrop_filter": "blur(0.5px)"
        },
        "h6": {
            "border_bottom": "1px solid rgba(var(--accent-color), 0.3)",
            "background": "rgba(var(--accent-color), 0.01)",
            "backdrop_filter": "blur(0.5px)"
        }
    },
    "badge_padding": "3px 8px",
    "badge_padding_mobile": "2px 6px",
    "lists": {
        "ul": {
            "background": "linear-gradient(135deg, rgba(var(--accent-color), 0.02), rgba(var(--accent-color), 0.005))",
            "backdrop_filter": "blur(1px)",
            "item_position": "relative",
            "item_padding_left": "2.3em",
            "item_before": {
                "content": "◆",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "auto",
                "height": "auto",
                "color": "var(--accent-color)",
                "font_size": "0.7em",
                "filter": "drop-shadow(0 0 3px rgba(var(--accent-color), 0.6))",
                "text_shadow": "0 0 4px rgba(var(--accent-color), 0.8), 0 0 8px rgba(255,255,255,0.4)"
            },
            "list_style_type": "none"
        },
        "ol": {
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.015), transparent)",
            "backdrop_filter": "blur(0.5px)",
            "counter_reset": "crystal-counter",
            "item_counter_increment": "crystal-counter",
            "item_position": "relative",
            "item_padding_left": "2.8em",
            "item_before": {
                "content": "counter(crystal-counter)",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "1.6em",
                "height": "1.2em",
                "background": "var(--background-secondary)",
                "border": "1px solid rgba(var(--accent-color), 0.6)",
                "color": "var(--text-secondary)",
                "border_radius": "0 0.6em 0.6em 0",
                "box_shadow": "0 0 0 2px rgba(var(--accent-color), 0.15), inset 0 0 0 1px rgba(255,255,255,0.05)",
                "display": "flex",
                "align_items": "center",
                "justify_content": "center",
                "font_size": "0.75em",
                "font_weight": "bold"
            },
            "list_style_type": "none"
        }
    }
}