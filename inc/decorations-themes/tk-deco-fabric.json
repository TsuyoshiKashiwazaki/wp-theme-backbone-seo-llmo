{
    "name": "T.Kファブリック",
    "id": "tk-deco-fabric",
    "description": "布地の柔らかな質感と編み目を表現するテキスタイルデザイン",
    "headings": {
        "h1": {
            "border": "2px dashed rgba(var(--accent-color), 0.3)",
            "background": "repeating-linear-gradient(45deg, rgba(var(--accent-color), 0.06), rgba(var(--accent-color), 0.06) 10px, rgba(var(--accent-color), 0.03) 10px, rgba(var(--accent-color), 0.03) 20px)",
            "box_shadow": "0 4px 12px rgba(0,0,0,0.08), inset 0 1px 2px rgba(255,255,255,0.1)"
        },
        "h2": {
            "border_left": "5px dotted var(--accent-color)",
            "background": "repeating-linear-gradient(90deg, rgba(var(--accent-color), 0.05), rgba(var(--accent-color), 0.05) 5px, rgba(var(--accent-color), 0.02) 5px, rgba(var(--accent-color), 0.02) 10px)",
            "box_shadow": "2px 2px 8px rgba(0,0,0,0.06)"
        },
        "h3": {
            "border_bottom": "2px dashed rgba(var(--accent-color), 0.35)",
            "background": "repeating-linear-gradient(180deg, rgba(var(--accent-color), 0.04), rgba(var(--accent-color), 0.04) 3px, rgba(var(--accent-color), 0.01) 3px, rgba(var(--accent-color), 0.01) 6px)"
        },
        "h4": {
            "border_left": "4px dotted rgba(var(--accent-color), 0.4)",
            "background": "repeating-linear-gradient(135deg, rgba(var(--accent-color), 0.03), rgba(var(--accent-color), 0.03) 8px, transparent 8px, transparent 16px)"
        },
        "h5": {
            "border_bottom": "1px dashed rgba(var(--accent-color), 0.3)",
            "background": "rgba(var(--accent-color), 0.02)"
        },
        "h6": {
            "border_bottom": "1px dotted rgba(var(--accent-color), 0.25)"
        }
    },
    "badge_padding": "4px 10px",
    "badge_padding_mobile": "3px 8px",
    "lists": {
        "ul": {
            "list_style_type": "none",
            "background": "repeating-linear-gradient(135deg, rgba(var(--accent-color), 0.03), rgba(var(--accent-color), 0.03) 15px, transparent 15px, transparent 30px)",
            "item_position": "relative",
            "item_padding_left": "2.2em",
            "item_before": {
                "content": "✦",
                "position": "absolute",
                "left": "0.5em",
                "top": "15px",
                "transform": "translateY(-50%)",
                "color": "var(--accent-color)",
                "font_size": "0.8em"
            }
        },
        "ol": {
            "list_style_type": "none",
            "background": "repeating-linear-gradient(90deg, rgba(var(--accent-color), 0.02), rgba(var(--accent-color), 0.02) 12px, transparent 12px, transparent 24px)",
            "counter_reset": "fabric-counter",
            "item_counter_increment": "fabric-counter",
            "item_position": "relative",
            "item_padding_left": "2.8em",
            "item_before": {
                "content": "counter(fabric-counter)",
                "position": "absolute",
                "left": "0.5em",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "1.5em",
                "height": "1.5em",
                "background": "repeating-linear-gradient(45deg, rgba(var(--accent-color), 0.2), rgba(var(--accent-color), 0.2) 2px, rgba(var(--accent-color), 0.1) 2px, rgba(var(--accent-color), 0.1) 4px)",
                "border": "1px dashed var(--accent-color)",
                "color": "var(--text-primary)",
                "border_radius": "2px",
                "display": "flex",
                "align_items": "center",
                "justify_content": "center",
                "font_size": "0.75em",
                "font_weight": "bold"
            }
        }
    }
}
