{
    "name": "T.Kダイヤモンド",
    "id": "tk-deco-diamond",
    "description": "ダイヤモンドの純粋性と輝きを表現する高級感のあるデザイン",
    "headings": {
        "h1": {
            "border": "3px double var(--accent-color)",
            "background": "linear-gradient(45deg, rgba(var(--accent-color), 0.1), rgba(var(--accent-color), 0.02))",
            "box_shadow": "0 0 20px rgba(var(--accent-color), 0.3), inset 0 0 20px rgba(var(--accent-color), 0.1)"
        },
        "h2": {
            "border_left": "5px solid var(--accent-color)",
            "border_right": "2px solid var(--accent-color)",
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.08), rgba(var(--accent-color), 0.02))",
            "box_shadow": "inset 0 0 15px rgba(var(--accent-color), 0.1)"
        },
        "h3": {
            "border_bottom": "2px double var(--accent-color)",
            "background": "radial-gradient(ellipse at center, rgba(var(--accent-color), 0.05), transparent)",
            "box_shadow": "0 2px 10px rgba(var(--accent-color), 0.2)"
        },
        "h4": {
            "border": "1px solid var(--accent-color)",
            "border_radius": "8px",
            "background": "rgba(var(--accent-color), 0.03)",
            "box_shadow": "0 0 8px rgba(var(--accent-color), 0.15)"
        },
        "h5": {
            "border_bottom": "2px dashed var(--accent-color)",
            "background": "linear-gradient(180deg, rgba(var(--accent-color), 0.02), transparent)"
        },
        "h6": {
            "border_bottom": "1px dotted var(--accent-color)",
            "background": "rgba(var(--accent-color), 0.01)"
        }
    },
    "lists": {
        "ul": {
            "list_style_type": "none",
            "background": "linear-gradient(135deg, rgba(var(--accent-color), 0.05), rgba(var(--accent-color), 0.01))",
            "item_position": "relative",
            "item_padding_left": "2em",
            "item_before": {
                "content": "◇",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%) rotate(45deg)",
                "width": "auto",
                "height": "auto",
                "color": "var(--accent-color)",
                "font_size": "0.8em",
                "text_shadow": "0 0 6px rgba(var(--accent-color), 0.9), inset 0 0 2px rgba(255,255,255,0.8)"
            }
        },
        "ol": {
            "list_style_type": "none",
            "background": "linear-gradient(90deg, rgba(var(--accent-color), 0.04), transparent)",
            "counter_reset": "diamond-counter",
            "item_counter_increment": "diamond-counter",
            "item_position": "relative",
            "item_padding_left": "2.5em",
            "item_before": {
                "content": "counter(diamond-counter)",
                "position": "absolute",
                "left": "0",
                "top": "15px",
                "transform": "translateY(-50%)",
                "width": "1.2em",
                "height": "1.2em",
                "background": "var(--background-secondary)",
                "color": "var(--text-secondary)",
                "border_radius": "50%",
                "box_shadow": "0 0 0 2px rgba(var(--accent-color), 0.5), inset 0 0 0 1px rgba(255,255,255,0.2)",
                "display": "flex",
                "align_items": "center",
                "justify_content": "center",
                "font_size": "0.8em",
                "font_weight": "bold"
            }
        }
    }
}
